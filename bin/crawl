#!/usr/bin/env node
const schedule = require('node-schedule')
const {
  main,
  getUrls
} = require('../index')


// *    *    *    *    *    *
// ┬    ┬    ┬    ┬    ┬    ┬
// │    │    │    │    │    |
// │    │    │    │    │    └ day of week (0 - 7) (0 or 7 is Sun)
// │    │    │    │    └───── month (1 - 12)
// │    │    │    └────────── day of month (1 - 31)
// │    │    └─────────────── hour (0 - 23)
// │    └──────────────────── minute (0 - 59)
// └───────────────────────── second (0 - 59, OPTIONAL)

// main(urls, 10000, 150)



console.log('已经启动定时任务')
let j = schedule.scheduleJob('*/9 * * * *', function(){
    getUrls(3)
        .then(function(urls){
            main(urls, 10000, 50)
        })
        .catch(function(err){
            if(err){
                console.log(err.message)
            }
        })
});
